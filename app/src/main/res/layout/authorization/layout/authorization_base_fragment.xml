<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.vsokoltsov.uprogress.common.utils.SlidingTabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            android:background="@color/toolbar_default"
            app:tabTextAppearance="@style/PagerTabStripText"
            />

        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:paddingTop="@dimen/authorization_view_pager_padding_top"
            android:paddingLeft="@dimen/authorization_view_pager_padding"
            android:paddingRight="@dimen/authorization_view_pager_padding"
             />
    </LinearLayout>
</LinearLayout>